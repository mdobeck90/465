<h1>High Scores</h1>
<table border="1">
 <thead>
  <tr>
   <th>User</th>
   <th>Game</th>
   <th>Score</th>
   <th colspan="3"></th>
  </tr>
 </thead>

 <tbody>
  <%@high_scores.each do |high_score|%>
   <tr>
    <td><%=high_score.user%></td>
    <td><%=high_score.game%></td>
    <td><%=high_score.score%></td>
    <td><%=link_to "View", high_score%></td>
    <td><%=link_to "Edit", edit_high_score_path(high_score)%></td>
    <td><%=link_to "Delete", high_score, method: :delete, data: {confirm: "Are you sure you want to delete #{high_score.user}'s score?"}%></td>
   </tr>
  <%end%>
 </tbody>
</table>

<%= link_to "New High Score", controller: "high_scores", action: "new" %>
