<p id="notice"><%= notice %></p>

<h1>Listing Operatives</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Status</th>
      <th>Skill</th>
      <th>Deployment time</th>
      <th>Job</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operatives.each do |operative| %>
      <tr>
        <td><%= operative.user_id %></td>
        <td><%= operative.name %></td>
        <td><%= operative.status %></td>
        <td><%= operative.skill %></td>
        <td><%= operative.deployment_time %></td>
        <td><%= operative.job_id %></td>
        <td><%= link_to 'Show', operative %></td>
        <td><%= link_to 'Edit', edit_operative_path(operative) %></td>
        <td><%= link_to 'Destroy', operative, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

