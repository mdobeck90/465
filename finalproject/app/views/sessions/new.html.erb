  <h1>Log In / Signup Page</h1>


  <%= flash[:danger] %>

  <%= form_for(:session, url: login_path) do |f| %>

    <%= f.label :Username %>
    <%= f.text_field :name %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Log in" %>
  <% end %>

  <p>New user? <%= link_to "Sign up now!", signup_path %></p>
