<%= form_for(current_user) do |f| %>
  <% if current_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(current_user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% current_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="hidden-field">
    <%= f.hidden_field(:firewall, :value => (current_user.firewall - 1)) %>
    <%= f.hidden_field(:active_firewall, :value => (current_user.active_firewall + 1)) %>
  </div> 
  <div class="actions">
    <%= f.submit "Activate Firewall(-1 Firewall)" %>
  </div>
<% end %>
