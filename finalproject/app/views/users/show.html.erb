<h2>HQ <%= Time.now.strftime("%m/%d %H%M%Z") %> </h2>

<table>
  <caption>Operatives</caption>
  <tr>
    <td>Name</td>
    <td>Status</td>
    <td>Skill</td>
    <td>Job</td>
  </tr>
  <% @operatives.each  do |operative|%>
    <tr>
      <td><%= operative.name %></td>
      <td><%= operative.status %></td>
      <td><%= operative.skill %></td>

      <% if operative.status != "deployed" %>
        <td>-</td>
      <% else %>
        <td><%= operative.job_id %></td>
      <% end %>
      
      <% if operative.status == "injured" or operative.status == "mia" %>
        <td><%= link_to 'Dispose', operative, method: :delete,data: {confirm: "Sever all ties and destroy all records of #{operative.name}?" }  %></td>
      <% end %>
      
      <% if operative.status != "injured" and operative.status != "mia" %>
        <td><%= link_to 'Fire', operative, method: :delete,data: {confirm: "Release #{operative.name} from contract?" } %></td>
      <% end %>
    </tr> 
  <% end %> 
</table>

<table>
  <caption>Items</caption>
  <tr>
    <td>Zero-days</td>
    <td>Operative Contracts</td>
    <td>Firewalls</td>
    <td>Honeypots</td>
  </tr>
    <tr>
      <td><%= current_user.zeroday %></td>
      <td><%= current_user.o_contract%></td>
      <td><%= current_user.firewall %></td>
      <td><%= current_user.honeypot %></td>
    </tr>
</table>

<table>
  <caption>Active Defenses</caption>
  <tr>
    <td>Firewalls</td>
    <td>Honeypots</td>
  </tr>
    <tr>
      <td><%= current_user.active_firewall %></td>
      <td><%= current_user.active_honeypot %></td>
    </tr>
</table>

<% if current_user.firewall  > 0 %>
  <%= render "activate_firewall" %>
<% end %>
<% if current_user.firewall  > 0 %>
  <%= render "operatives/activate_operative" %>
<% end %>
