<p id="notice"><%= notice %></p>
<%= link_to 'New Image', new_image_path %>

<div class="wrap">

<% if user_signed_in? %>
  <h2>My Images</h2>
  <% @images.each do |image| %>
    <% if current_user.id == image.user_id %>
      <div class="tile">
        <%= link_to(image_tag(image.filename, :class => "img-thumbnail"), image) %>
      </div>
    <% end %>
  <% end %>
  
  <h2>Private Images</h2>
  <% @imageusers.each do |imageuser| %>
    <div class="tile">
      <%= link_to(image_tag(Image.find(imageuser.id).filename, :class => "img-thumbnail"), Image.find(imageuser.id)) %>
    </div>
  <% end %>

<% else #show all public images %>

  <h2>Public Images</h2>
  <% @images.each do |image| %>
    <div class="tile">
      <%= link_to(image_tag(image.filename, :class => "img-thumbnail"), image) %>
    </div>
  <% end %>


<% end %>

</div>
